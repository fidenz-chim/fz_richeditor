<% unless @items[0].empty? && @items[1].empty? %>
	<% unless @search %>

		<%
			@folders = @items[0]
			@files   = @items[1]
		%>

		<%	if @folders.count > 0 %>
			$("#items").append("<%= escape_javascript(render :partial => "folder", :collection => @folders, :as => :folder) %>");
		<% 	end %>

		<% 	if @files.count > 0 %>
			$("#items").append("<%= escape_javascript(render :partial => "file", :collection => @files, :as => :file) %>");
		<% end	%>

	<% else %>

		<% unless @items.nil? %>
			$("#items").append("<%= escape_javascript(render :partial => "file", :collection => @items, :as => :file) %>");
		<% end %>

	<% end %>
<% end %>